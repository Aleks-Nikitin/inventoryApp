<!DOCTYPE html>
<html lang="en">
<%-include("partials/head.ejs") %>
<body>
      <%-include("partials/nav.ejs") %>
    
    <div class="titleBar">
        <h3>Developers:</h3>
       <a href="/dev/add"> <button>add developer</button></a>
    </div>
    <ul>
        <% if(locals.devs) {%>
            <% devs.forEach(dev => {%>
                <li> <a href="/dev?id=<%=dev.id %>"><%=dev.devname %> </a></li>
                <a href="/dev/delete?id=<%=dev.id%>"><button>Delete</button></a>
                <a href="/dev/add?id=<%=dev.id%>"><button>Update</button></a>
            <% }); %>
        <% } %>
   </ul>
   <h3>Games:</h3>
   <%if(locals.games) { %>
           <% games.forEach(game => { %>
            <div class="game">
            <a href="/item?id=<%=game.id%>">
            <ul>
                <li> <%=game.name %> <%=game.devname %></li>
                
            </ul>
            </a>
            <div class="btns">
            <a href="/item/delete?id=<%=game.id %>"><button>Delete</button></a>
                <a href="/item/add?id=<%=game.id %>"><button>Update</button> </a>
                </div>
                </div>
        <%  });  %>
    <% } %>
</body>
</html>